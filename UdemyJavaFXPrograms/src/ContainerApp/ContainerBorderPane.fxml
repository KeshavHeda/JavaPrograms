<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="ContainerApp.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="This Label is in the top position" alignment="CENTER" textFill="red"
               BorderPane.alignment="CENTER"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"/>
    </top>
    <left>
        <Label text="This Label is in the left position" alignment="CENTER" textFill="red"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"/>
    </left>
    <center>
        <Label text="This Label is in the center position and has really very looooooooooooooooooooooooooong text" alignment="CENTER" textFill="red"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"/>
    </center>
    <right>
        <Label text="This Label is in the right position" alignment="CENTER" textFill="red"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"/>
    </right>
    <bottom>
        <HBox spacing="10" alignment="BOTTOM_RIGHT">

            <padding>
                <Insets bottom="10" left="10" right="10"/>
            </padding>

            <Button text="Okay" prefWidth="90" prefHeight="40"/>
            <Button text="Cancel" prefWidth="90" prefHeight="40"/>
            <Button text="Help" prefWidth="90" prefHeight="40"/>
        </HBox>
    </bottom>
</BorderPane>
