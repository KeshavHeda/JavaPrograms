<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="ContainerApp.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased" />
    <Button fx:id="btnHello" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Say Hello"
            onAction="#onButtonClicked" />
    <Button fx:id="btnBye" GridPane.rowIndex="1" GridPane.columnIndex="1" text="Say Bye"
            onAction="#onButtonClicked" />
    <CheckBox fx:id="chkClear" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
              text="Clear the field after saying hello or bye" onAction="#handleClear" />
    <Label fx:id="lblProcess" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
            text="Nothing happened !!!" />
</GridPane>