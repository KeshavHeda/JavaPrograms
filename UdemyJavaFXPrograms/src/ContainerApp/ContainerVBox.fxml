<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="ContainerApp.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT"
      spacing="10"
      style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed">

    <padding>
        <Insets top="10" left="10"/>
    </padding>

    <Button text="Okay" prefWidth="90" prefHeight="40"/>
    <Button text="Cancel" prefWidth="90" prefHeight="40"/>
    <Button text="Help" prefWidth="90" prefHeight="40"/>
</VBox>