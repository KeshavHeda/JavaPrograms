<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.web.WebView?>
<GridPane fx:id="gridPaneControl" fx:controller="com.keshav.styled.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10"
          stylesheets="@style.css">

    <Button fx:id="button1" text="Open Directory..." onAction="#handleDirClick" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Button fx:id="button2" text="Open File..." onAction="#handleFileClick" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Button id="button_three" text="Button Three" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="button4" text="Button Four" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    <Button text="Button Five" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <RadioButton text="Choice 1" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="labelEffects" text="JavaFX Effects" GridPane.rowIndex="1" GridPane.columnIndex="1"
        rotate="90"
           onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" />

    <Hyperlink text="www.javafx.com" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#handleLinkClick"/>

    <WebView fx:id="webViewControl" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowSpan="3"/>

</GridPane>

